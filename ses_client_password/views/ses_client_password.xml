<?xml version="1.0" encoding="utf-8"?>
<openerp>
        
    <data>
    	<template id="assets_backend" name="Client Password assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/ses_client_password/static/src/js/ses_client_password.js"></script>
            </xpath>
        </template>
    	
        <menuitem name="Client Password" id="menu_ses_client_password" sequence="10" />
	    <menuitem id="menu_customer" parent="menu_ses_client_password" name="Customers" sequence="1" />
		
	    <record id="action_customers" model="ir.actions.act_window">
	        <field name="name">Customers</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">ses_client_password.customer</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
	    </record>
	    
	    <menuitem action="action_customers" id="menu_customers" parent="menu_customer" sequence="10"/>
	    
         <record id="view_ses_client_password_tree" model="ir.ui.view">
            <field name="name">saas_ses_client_password.customer.tree</field>
            <field name="model">ses_client_password.customer</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Customers">
					<field name="partner_id"/>
					<field name="project_id"/>
					<field name="type"/>
                </tree>
            </field>
       	 </record>
    	 <record id="view_ses_client_password_form" model="ir.ui.view">
            <field name="name">ses_client_password.customer.form</field>
            <field name="model">ses_client_password.customer</field>
            <field name="arch" type="xml">
				<form string="Customer">
				<sheet>
					<group>
						<group>
							<field name="partner_id"/>
							<field name="user_name"/>
							<field name="pass_word" password="True" widget="password_reveal"/>
							<field name="type"/>
						</group>
						<group>
							<field name="project_id"/>
							<field name="url"/>
							<field name="create_uid" string="Created by" readonly="True"/>
							<field name="create_date" string="Creation date" readonly="True"/>
						</group>
					</group>
					<notebook>
                        <page string="Allowed users" name="allowed_users">
                            <field colspan="4" name="allowed_users_ids" widget="many2many_kanban" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager']}">
                                <kanban quick_create="false" create="true" delete="true">
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div style="position: relative">
                                                <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                                                <div class="oe_module_vignette">
                                                    <img t-att-src="kanban_image('res.users', 'image_small', record.id.value)" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                                    <div class="oe_module_desc">
                                                        <field name="name"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Comments" name="comments">
							<field name="comments"/>                        
                        </page>
                    </notebook>
				</sheet>				
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" help="Follow this page to automatically track the events associated to this project." groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
				</form>
            </field>
        </record>
    </data>
</openerp>
